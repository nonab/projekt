{% extends 'ProjektUserBundle::base.html.twig' %}

{% block body -%}
    <h1>Uprawnienie</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Kod</th>
                <td>{{ entity.kod }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('permission') }}">
            Wstecz (do listy)
        </a>
    </li>
    <li>
        <a href="{{ path('permission_edit', { 'id': entity.id }) }}">
            Edytuj
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
