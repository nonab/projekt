{% extends 'ProjektUserBundle::base.html.twig' %}
{% block body -%}
    <h1>Lista uprawnionych</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Imie</th>
                <th>Nazwisko</th>
                <th>Data urodzenia</th>
                <th>E-mail</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.imie }}</td>
                <td>{{ entity.nazwisko }}</td>
                <td>{% if entity.dataurodzenia %}{{ entity.dataurodzenia|date('d-m-Y') }}{% endif %}</td>
                <td>{{ entity.email }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('user_show', { 'id': entity.id }) }}">pokaz</a>
                    </li>
                    <li>
                        <a href="{{ path('user_edit', { 'id': entity.id }) }}">edytuj</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('user_new') }}">
                Dodaj wpis
            </a>
        </li>
    </ul>
    {% endblock %}
